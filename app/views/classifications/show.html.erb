<% content_for :title, @classification.title %>

<ol class="breadcrumb">
  <li><%= link_to 'Home', root_path %></li>
  <li><%= link_to 'Classifications', classifications_path %></li>
  <li class="active"><%= link_to @classification.title, @classification %></li>
</ol>

<ul class="nav nav-tabs">
  <li class="active"><%= link_to 'Details', @classification %></li>
  <li><%= link_to 'Wines', classification_wines_path(@classification) %>
</ul>

<dl>
  <dt>Designation</dt>
  <dd><%= @classification.designation.humanize %></dd>

  <% if @classification.classification.present? %>
    <dt>Classification</dt>
    <dd><%= @classification.classification.humanize %></dd>
  <% end %>

  <dt>Number of wines</dt>
  <dd><%= number_to_human @classification.wines.count %></dd>
</dl>
